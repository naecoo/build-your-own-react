{
	"compilerOptions": {
    "outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
		
		"target": "esnext",
		"module": "esnext",
		"lib": ["es2015", "DOM"],
		"moduleResolution": "node",

    "strict": true,
		"removeComments": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"allowJs": true
	},
	"include": ["src/**/*"],
}
